fun search(list : MutableList<Int>, x : Int) // using function without a return type
{
    for (i in 0 ..list.size - 1)
    {
        if (list[i] == x)
        {
            println("The Integer is found at ${i}") break
        }
    }
}

fun main(){
    val listS = mutableListOf(1, 2, 3, 4, 5, 6)
        search(listS, 4)

}

