fun search(list : MutableList<Int>, x : Int): Int// use return type
{
    for (i in 0 ..list.size - 1) {
        if (list[i] == x) {
            return list[i]
        }
    }

        return -1// (it is a must use here) you cannot use else here as if it is not paired with if statement and you have to use return -1 as we have mentioned what to do when it is found but kotlin wants full information what if it doesn't work

}

fun main(){
    val listS = mutableListOf(1, 2, 3, 4, 5, 6)
    val result = search(listS, 4)
    println(result)

}
