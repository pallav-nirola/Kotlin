open class Animal(var name : String) {// Constructor with a property


    fun eat (){
        println(" ${name} can eat")
    }
    fun change(new : String){
     name = new
    }
}
class dog(name : String) : Animal(name){  // Dog receives and passes name to teh Parent
    fun bark(){
        println("I may bark") // Uses name from Animal
    }
    }

fun main(){
    val tommy = dog("tommy") // Constructor called with "Tommy"
    tommy.bark() // Output: Tommy can bark
    tommy.eat()
    tommy.change("Lexi")
    tommy.bark()
    tommy.eat()
//Class	    Has a name variable?   	Why?
//Animal	✅ Yes (via var name)	    It's declared there
//Dog	❌ No	Just passes name up to the parent

}
